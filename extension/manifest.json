{
  "manifest_version": 3,
  "name": "TOPAY Node",
  "version": "0.1.57",
  "description": "Control your TOPAY node, track device IP, and monitor points and uptime",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://node.topayfoundation.com/*",
    "https://*.topayfoundation.com/*"
  ],
  "optional_host_permissions": [
    "https://api.ipify.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://node.topayfoundation.com/*",
        "https://*.topayfoundation.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": [
        "https://node.topayfoundation.com/*",
        "https://*.topayfoundation.com/*"
      ]
    }
  ]
}
